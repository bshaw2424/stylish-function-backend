<%- include("../../../partials/header") %><%- include ("../../admin/mobile-nav")
%>
<section class="index-container">
  <%- include ("../../admin/admin-nav") %>
  <div class="container">
    <form
      action="/articles/<%= article.slug %>/products"
      method="POST"
      class="form form-group"
      enctype="multipart/form-data"
    >
      <div class="title-container">
        <h1>Add Product</h1>
      </div>
      <div class="product-section">
        <label for="product-title">Product Title:</label>
        <input
          type="text"
          name="Product[title]"
          id="product-title"
          class="browser-default form-field"
        />

        <label for="product-price">Product Price:</label>
        <input
          type="text"
          name="Product[price]"
          id="product-price"
          class="browser-default form-field"
        />

        <label for="product-image">Product Image:</label>
        <input
          type="file"
          name="Product[image]"
          id="product-image"
          class="browser-default form-field"
        />
        <label for="key-features">Key Features:</label>
        <textarea
          name="Product[features]"
          id="key-features"
          class="form-field text-area"
        ></textarea>

        <label for="drawbacks">Drawbacks:</label>
        <textarea
          name="Product[drawbacks]"
          id="drawbacks"
          class="form-field text-area"
        ></textarea>

        <label for="product-description">Product Description:</label>
        <textarea
          name="Product[description]"
          id="product-description"
          class="form-field text-area"
        ></textarea>
      </div>
      <div class="button-container">
        <button type="submit" class="btn go-button" id="add-product-button">
          save
        </button>
        <a href="/articles/<%= article.slug %>" class="static-button btn"
          >cancel</a
        >
      </div>
    </form>
  </div>
</section>
<%- include("../../../partials/footer") %>
